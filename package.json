{
  "name": "@fdutil/monorepo",
  "version": "0.0.15",
  "private": true,
  "packageManager": "pnpm@7.3.0",
  "scripts": {
    "build": "rimraf packages/*/dist && pnpm -r run build && cp ./README.md ./packages/core/README.md",
    "stub": "pnpm -r --parallel run stub",
    "lint": "eslint .",
    "lint:fix": "nr lint --fix",
    "publish:ci": "esno scripts/publish.ts",
    "publish": "pnpm build && pnpm -r publish",
    "release": "bumpp package.json packages/*/package.json --commit --push --tag"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.25.1",
    "@types/node": "^18.0.0",
    "bumpp": "^8.2.1",
    "consola": "^2.15.3",
    "eslint": "^8.18.0",
    "esno": "^0.16.3",
    "localforage": "^1.10.0",
    "nanoid": "^4.0.0",
    "pnpm": "^7.3.0",
    "typescript": "^4.7.4",
    "unbuild": "^0.7.4",
    "@fdutil/core": "workspace:*",
    "@fdutil/shared": "workspace:*"
  },
  "pnpm": {},
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --fix"
    ]
  }
}
