{
  "name": "@fdutils/monorepo",
  "version": "0.0.2",
  "private": true,
  "packageManager": "pnpm@7.2.1",
  "description": "front end developer toolkit",
  "author": "ldl",
  "license": "MIT",
  "scripts": {
    "build": "rimraf packages/*/dist && pnpm -r run build",
    "lint": "eslint .",
    "lint:fix": "nr lint --fix",
    "release": "bumpp package.json packages/*/package.json --commit --push --tag"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.25.1",
    "@types/node": "^18.0.0",
    "bumpp": "^8.2.0",
    "consola": "^2.15.3",
    "eslint": "^8.17.0",
    "esno": "^0.16.3",
    "localforage": "^1.10.0",
    "pnpm": "^7.2.1",
    "typescript": "^4.7.3",
    "unbuild": "^0.7.4"
  },
  "pnpm": {},
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --fix"
    ]
  }
}
