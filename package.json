{
  "name": "@fdutil/monorepo",
  "version": "0.0.26",
  "private": true,
  "packageManager": "pnpm@7.9.0",
  "scripts": {
    "build": "rimraf packages/*/dist && pnpm -r run build && cp ./README.md ./packages/core/README.md",
    "stub": "pnpm -r --parallel run stub",
    "lint": "eslint .",
    "lint:fix": "nr lint --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "publish": "pnpm build && pnpm -r publish",
    "release": "bumpp package.json packages/*/package.json --commit --push --tag"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.26.1",
    "@fdutil/core": "workspace:*",
    "@fdutil/components": "workspace:*",
    "@fdutil/shared": "workspace:*",
    "@types/node": "^18.7.6",
    "@vitejs/plugin-vue": "^3.0.3",
    "@vue/test-utils": "^2.0.2",
    "bumpp": "^8.2.1",
    "c8": "^7.12.0",
    "consola": "^2.15.3",
    "eslint": "^8.22.0",
    "esno": "^0.16.3",
    "jsdom": "^20.0.0",
    "localforage": "^1.10.0",
    "nanoid": "^4.0.0",
    "pnpm": "^7.9.0",
    "typescript": "^4.7.4",
    "unbuild": "^0.8.8",
    "vite": "^3.0.8",
    "vitest": "^0.22.0"
  },
  "pnpm": {},
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --fix"
    ]
  }
}
